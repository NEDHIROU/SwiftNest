<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:SwiftNest"
       x:Class="SwiftNest.AppShell">

    <FlyoutItem Title="Ana Sayfa" Icon="house.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Vücut Kitle İndeksi" Icon="muscle.png">
        <ShellContent ContentTemplate="{DataTemplate local:VucutKitleIndeksi}" />
    </FlyoutItem>

    <FlyoutItem Title="Kredi Hesaplama" Icon="calculator.png">
        <ShellContent ContentTemplate="{DataTemplate local:KrediHesaplamaPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Renk Seçimi" Icon="palette.png">
        <ShellContent ContentTemplate="{DataTemplate local:RenkSecimiPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Yapılacaklar Listesi" Icon="to_do.png">
        <ShellContent ContentTemplate="{DataTemplate local:YapilacaklarListesiPage}" />
    </FlyoutItem>

</Shell>
